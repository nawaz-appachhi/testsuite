<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="LGPRegressionTestSuite" verbose="1">
    <parameter name="team" value="StoreFront"/>
    <parameter name="core" value="LGP Suite"/>
    <parameter name="type" value="Exhaustive Regression etc"/>
	<listeners>
		<listener class-name="com.myntra.lordoftherings.SCMTestListener" />
		<listener class-name="com.myntra.lordoftherings.MyntraListener" />
		
	</listeners>
	<test name="LGPRegressionTests">
		<groups>
			<run>
				<include name="Sanity" />
				<include name="Regression" />
			</run>
		</groups>
		<classes>
			<class name="com.myntra.apiTests.notification.TestNGconfiguration_Low" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.HotListTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.StreamSanityTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.LGPFeedFlowTest" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.StreamFlowTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.OnBoardingTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.TimeLineTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.LgpUserTests" />
			<class name="com.myntra.apiTests.portalservices.lgpservices.LgpActionsTest" />
		</classes>
	</test>
</suite>