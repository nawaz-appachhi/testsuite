<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="CRM Notifications Sanity Suite" verbose="1">
	<parameter name="team" value="SCM"/>
	<parameter name="core" value="CRM"/>
	<parameter name="type" value="Sanity"/>
	<listeners>
		<listener class-name="com.myntra.lordoftherings.SCMTestListener"/>
	</listeners>
	<test name="crmTests">
		<groups>
			<run>
				<include name="Sanity"/>
			</run>
		</groups>
		<classes>
			<class name="com.myntra.qnotifications.CRMQNotifications"/>
			<class name="com.myntra.qnotifications.CRMNotifyCodesNotifications"/>
			<class name="com.myntra.qnotifications.APItoPushNotifications_Updated"/>
			<class name="com.myntra.qnotifications.EndToEndNotifications"/>
		</classes>
	</test>
</suite>